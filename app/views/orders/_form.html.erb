<div class="container">
  <div class="row justify-content-center">
  <div class="orderform-view">
    <%= simple_form_for @order do |f| %>
      <h1>Create an order</h1>
      <div class="form-row">
        <div class="col-sm">
          <%= f.input :case_no %>
        </div>
        <div class="col-sm">
          <%= f.association :product, label: "Model number", prompt: "Choose a product", collection: @product_model %>
        </div>
        <div class="col-sm">
          <%= f.input :serial_number %>
        </div>
    </div>
    <div class="form-row">
      <div class="col-sm">
        <%= f.input :first_name %>
      </div>
      <div class="col-sm">
        <%= f.input :last_name %>
      </div>
    </div>
      <%= f.input :address %>
      <%= f.input :address1, label: "Address2" %>
      <div class="form-row">
        <div class="col-sm">
          <%= f.input :city %>
        </div>
        <div class="col-sm">
          <%= f.input :state %>
        </div>
        <div class="col-sm">
          <%= f.input :zip %>
        </div>
      </div>
      <%= f.input :telephone_no %>
      <%= f.input :email %>
      <%= f.submit "Create order", class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
</div>

