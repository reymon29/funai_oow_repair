<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1>Orders</h1>
      <table id="orders" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Order No</th>
            <th>Case No</th>
            <th>Model</th>
            <th>Order Status</th>
            <th>State</th>
            <th>Option</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.order_no %></td>
              <td><%= order.case_no %></td>
              <td><%= order.product.model_no %></td>
              <td><%= order.order_status %></td>
              <td><%= order.state %></td>
              <td><%= link_to(order_path(order), class: "badge badge-primary" ) do %>
                Open
              </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
