<div class="container">
  <div class="row">
    <h1>Repairs</h1>
    <% @repairs.each do |repair| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag("https://res.cloudinary.com/dfr1rmbqg/image/upload/v1550725358/johgiaf2hoekogq1hjqb.jpg"), repair_rate_path(repair)%>
          <div class="caption">
            <h3><%= repair.name %></h3>
            <p>Amount: <%= humanized_money_with_symbol(repair.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
